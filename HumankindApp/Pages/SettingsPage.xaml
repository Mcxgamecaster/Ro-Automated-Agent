<Page x:Class="HumankindApp.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings"
      Background="Transparent">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with accent line -->
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border Width="4" Height="28" CornerRadius="2" Margin="0,0,14,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF6B9D" Offset="0"/>
                            <GradientStop Color="#A855F7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock Text="Settings" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
            <TextBlock Text="API keys and model selection. Stored locally using Windows DPAPI." Foreground="{StaticResource TextSecondary}" Margin="18,6,0,0" FontSize="13"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,16,0" Padding="18">
                <StackPanel>
                    <TextBlock Text="Gemini Configuration" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>

                    <TextBlock Text="Model" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6" FontSize="11"/>
                    <TextBox Style="{StaticResource Input}" Text="{Binding GeminiModel, UpdateSourceTrigger=PropertyChanged}" Height="36"/>

                    <TextBlock Text="Planner interval (seconds)" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,6" FontSize="11"/>
                    <TextBox Style="{StaticResource Input}" Text="{Binding GeminiIntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Height="36"/>

                    <Border Margin="0,14,0,0" Padding="12" CornerRadius="6" Background="#111113">
                        <CheckBox Style="{StaticResource Toggle}" Content="Send Vision (screenshot)" IsChecked="{Binding GeminiSendVision}"/>
                    </Border>

                    <TextBlock Text="API Key" Foreground="{StaticResource TextSecondary}" Margin="0,14,0,6" FontSize="11"/>
                    <PasswordBox x:Name="ApiKeyBox" Style="{StaticResource InputPassword}" PasswordChanged="ApiKeyBox_OnPasswordChanged" Height="36"/>

                    <Border Height="1" Margin="0,16,0,16" Background="{StaticResource BorderSubtle}"/>

                    <Button Style="{StaticResource BtnPrimary}" Content="ðŸ’¾  Save Settings" Command="{Binding SaveSettingsCommand}" HorizontalAlignment="Stretch" Height="36"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Security Notes" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>
                    <Border Grid.Row="1" Padding="16" CornerRadius="6" Background="#111113">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="ðŸ”’" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Your data is secure" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}" LineHeight="24" FontSize="13"
                                       Text="Your API key is stored per-Windows-user using DPAPI encryption and injected into the Python process via the GEMINI_API_KEY environment variable."/>
                            <Border Height="1" Margin="0,20,0,20" Background="#2A2A2E"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ“" Foreground="{StaticResource Accent}" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="Never written to the repo" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="âœ“" Foreground="{StaticResource Accent}" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="Encrypted at rest" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="âœ“" Foreground="{StaticResource Accent}" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="User-scoped access only" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
