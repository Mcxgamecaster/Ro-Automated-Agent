<Page x:Class="HumankindApp.Pages.CalibrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Calibration"
      Background="Transparent">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with accent line -->
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border Width="4" Height="28" CornerRadius="2" Margin="0,0,14,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF6B9D" Offset="0"/>
                            <GradientStop Color="#A855F7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock Text="Calibration" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
            <TextBlock Text="Define ROIs, collect templates, and save profile settings." Foreground="{StaticResource TextSecondary}" Margin="18,6,0,0" FontSize="13"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,16,0" Padding="18">
                <StackPanel>
                    <TextBlock Text="Parameters" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>

                    <TextBlock Text="Config path" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6" FontSize="11"/>
                    <TextBox Style="{StaticResource Input}" Text="{Binding ConfigPath, UpdateSourceTrigger=PropertyChanged}" Height="36"/>

                    <TextBlock Text="Profile" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,6" FontSize="11"/>
                    <TextBox Style="{StaticResource Input}" Text="{Binding Profile, UpdateSourceTrigger=PropertyChanged}" Height="36"/>

                    <TextBlock Text="Python executable" Foreground="{StaticResource TextSecondary}" Margin="0,12,0,6" FontSize="11"/>
                    <TextBox Style="{StaticResource Input}" Text="{Binding PythonExecutable, UpdateSourceTrigger=PropertyChanged}" Height="36"/>

                    <Border Height="1" Margin="0,16,0,16" Background="{StaticResource BorderSubtle}"/>

                    <Button Style="{StaticResource BtnPrimary}" Content="▶  Start Calibration" Command="{Binding RunCalibrationCommand}" HorizontalAlignment="Stretch" Height="36"/>
                    <Button Style="{StaticResource BtnDanger}" Content="■  Stop" Command="{Binding StopCommand}" Margin="0,8,0,0" HorizontalAlignment="Stretch" Height="36"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Width="4" Height="16" CornerRadius="2" Margin="0,0,10,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FF6B9D" Offset="0"/>
                                    <GradientStop Color="#A855F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="Output" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>
                    <Border Grid.Row="1" Style="{StaticResource OutputConsole}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding OutputLog, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" 
                                     FontFamily="Cascadia Code, Consolas, monospace" FontSize="11"
                                     Foreground="{StaticResource TextSecondary}" Background="Transparent" 
                                     BorderThickness="0" Padding="0" Margin="0"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
