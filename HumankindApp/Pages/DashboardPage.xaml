<Page x:Class="HumankindApp.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard"
      Background="Transparent">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with accent line -->
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border Width="4" Height="28" CornerRadius="2" Margin="0,0,14,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF6B9D" Offset="0"/>
                            <GradientStop Color="#A855F7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock Text="Dashboard" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
            <TextBlock Text="Quick actions and session output" Foreground="{StaticResource TextSecondary}" Margin="18,6,0,0" FontSize="13"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Quick Actions Card -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,16,0" Padding="18">
                <StackPanel>
                    <TextBlock Text="Quick Actions" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                    <TextBlock Text="Run calibration or start the agent." Foreground="{StaticResource TextSecondary}" Margin="0,0,0,16" FontSize="11"/>

                    <Button Style="{StaticResource BtnPrimary}" Content="â–¶  Run Calibration" Command="{Binding RunCalibrationCommand}" HorizontalAlignment="Stretch" Height="36"/>
                    <Button Style="{StaticResource BtnSecondary}" Content="â–¶  Run Agent" Command="{Binding RunAgentCommand}" Margin="0,8,0,0" HorizontalAlignment="Stretch" Height="36"/>
                    <Button Style="{StaticResource BtnDanger}" Content="â–   Stop" Command="{Binding StopCommand}" Margin="0,8,0,0" HorizontalAlignment="Stretch" Height="36"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"/>

                    <Border Height="1" Margin="0,16,0,16" Background="{StaticResource BorderSubtle}"/>

                    <Button Style="{StaticResource BtnSecondary}" Content="ðŸ’¾  Save Log" Command="{Binding SaveLogCommand}" HorizontalAlignment="Stretch" Height="36"/>
                </StackPanel>
            </Border>

            <!-- Output Card -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with Clear Button -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="4" Height="16" CornerRadius="2" Margin="0,0,10,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FF6B9D" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Session Output" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="ðŸ—‘ Clear" Command="{Binding ClearOutputCommand}" 
                                Height="28" Padding="12,0" FontSize="11" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderNormal}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#20FF6B9D"/>
                                                        <Setter TargetName="bg" Property="BorderBrush" Value="#50FF6B9D"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <!-- Output Console -->
                    <Border Grid.Row="1" Style="{StaticResource OutputConsole}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding OutputLog, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" 
                                     FontFamily="Cascadia Code, Consolas, monospace" FontSize="11"
                                     Foreground="{StaticResource TextSecondary}" Background="Transparent" 
                                     BorderThickness="0" VerticalScrollBarVisibility="Auto"
                                     Padding="0" Margin="0"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
