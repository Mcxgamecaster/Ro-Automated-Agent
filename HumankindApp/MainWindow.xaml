<Window x:Class="HumankindApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pages="clr-namespace:HumankindApp.Pages"
        Title="Humankind Ware"
        Icon="app.ico"
        Width="1000" Height="650"
        MinWidth="640" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="6" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource BgDeep}"
            BorderBrush="{StaticResource BorderSubtle}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource BgBase}" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon + Title with Anime-Style Animated Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="14,0,0,0">
                        <Grid Width="28" Height="28">
                            <!-- Outer Rotating Glow Ring -->
                            <Border x:Name="LogoRing" Width="28" Height="28" CornerRadius="14" Opacity="0.4"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FF6B9D" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="0.5"/>
                                        <GradientStop Color="#E879F9" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.RenderTransform>
                                    <RotateTransform x:Name="LogoRingRotate" Angle="0"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <BlurEffect Radius="6"/>
                                </Border.Effect>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="LogoRingRotate" 
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360" Duration="0:0:8">
                                                    <DoubleAnimation.EasingFunction>
                                                        <SineEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                            
                            <!-- Pulsing Glow -->
                            <Border x:Name="LogoGlow" Width="24" Height="24" CornerRadius="12" Opacity="0.5">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF6B9D" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="LogoGlow" 
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 From="0.3" To="0.8" Duration="0:0:1.5"
                                                                 AutoReverse="True">
                                                    <DoubleAnimation.EasingFunction>
                                                        <SineEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                            
                            <!-- Round Icon Image -->
                            <Border Width="20" Height="20" CornerRadius="10">
                                <Border.Background>
                                    <ImageBrush ImageSource="RoundIcon.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                        </Grid>
                        
                        <!-- Animated Title Text -->
                        <TextBlock Text="HUMANKIND" FontWeight="Bold" FontSize="14" 
                                   Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF6B9D" Offset="0"/>
                                    <GradientStop Color="#E879F9" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Text="WARE" Foreground="{StaticResource TextPrimary}" FontWeight="Light" 
                                   FontSize="14" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Foreground="{StaticResource TextMuted}" 
                                   FontSize="11" Margin="14,0,0,0" VerticalAlignment="Center" Opacity="0.6">
                            <TextBlock.Inlines>
                                <Run Text="—"/>
                                <Run Text=" Automation Companion" Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock.Inlines>
                        </TextBlock>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button Style="{StaticResource WindowBtn}" Content="─" Click="MinimizeButton_Click"/>
                        <Button Style="{StaticResource WindowBtn}" Content="□" Click="MaximizeButton_Click"/>
                        <Button Style="{StaticResource WindowCloseBtn}" Content="✕" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar with Shadow -->
                <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderSubtle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#0D0A10" Offset="0"/>
                            <GradientStop Color="#100C14" Offset="0.7"/>
                            <GradientStop Color="#08060A" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="0" ShadowDepth="8" BlurRadius="20" Opacity="0.6"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="140"/>
                        </Grid.RowDefinitions>

                        <!-- Status Indicator with Enhanced Pulse Animation -->
                        <Border Grid.Row="0" Margin="12,16,12,8" Padding="12,10" CornerRadius="10" 
                                BorderThickness="1">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#30FF6B9D" Offset="0"/>
                                    <GradientStop Color="#20A855F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1018" Offset="0"/>
                                    <GradientStop Color="#1F151D" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Grid Width="12" Height="12" Margin="0,0,10,0">
                                        <!-- Animated Ring -->
                                        <Border x:Name="StatusRing" Width="12" Height="12" CornerRadius="6" 
                                                Opacity="0.5" RenderTransformOrigin="0.5,0.5">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#FF6B9D" Offset="0"/>
                                                    <GradientStop Color="#A855F7" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="StatusRingScale" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <Border.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="StatusRingScale" 
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             From="0.8" To="1.3" Duration="0:0:1.5"
                                                                             AutoReverse="True">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <SineEase EasingMode="EaseInOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                            <DoubleAnimation Storyboard.TargetName="StatusRingScale" 
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             From="0.8" To="1.3" Duration="0:0:1.5"
                                                                             AutoReverse="True">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <SineEase EasingMode="EaseInOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                            <DoubleAnimation Storyboard.TargetName="StatusRing" 
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             From="0.6" To="0.2" Duration="0:0:1.5"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Border.Triggers>
                                        </Border>
                                        
                                        <!-- Inner Dot -->
                                        <Border x:Name="StatusDot" Width="8" Height="8" CornerRadius="4">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#FF8FB3" Offset="0"/>
                                                    <GradientStop Color="#FF6B9D" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                    <TextBlock x:Name="StatusLabel" Text="AGENT OFFLINE" Foreground="{StaticResource TextSecondary}" 
                                               FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Navigation Menu -->
                        <StackPanel Grid.Row="1" Margin="8,8,8,0">
                            <RadioButton x:Name="NavDashboard" Style="{StaticResource NavBtn}" Content="Dashboard" 
                                         GroupName="MainNav" IsChecked="True" Checked="NavButton_Checked" Tag="Dashboard"/>
                            <RadioButton x:Name="NavCalibration" Style="{StaticResource NavBtn}" Content="Calibration" 
                                         GroupName="MainNav" Checked="NavButton_Checked" Tag="Calibration"/>
                            <RadioButton x:Name="NavRun" Style="{StaticResource NavBtn}" Content="Run Agent" 
                                         GroupName="MainNav" Checked="NavButton_Checked" Tag="Run"/>
                        </StackPanel>

                        <!-- Spacer -->
                        <Border Grid.Row="2"/>

                        <!-- Settings at bottom -->
                        <StackPanel Grid.Row="3" Margin="8,0,8,8">
                            <RadioButton x:Name="NavSettings" Style="{StaticResource NavBtn}" Content="Settings" 
                                         GroupName="MainNav" Checked="NavButton_Checked" Tag="Settings"/>
                        </StackPanel>

                        <!-- Activity Log with Enhanced Styling -->
                        <Border Grid.Row="4" Margin="12,8,12,12" CornerRadius="8" BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#18141A" Offset="0"/>
                                    <GradientStop Color="#1C181E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#25202A" Offset="0"/>
                                    <GradientStop Color="#20181E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,8,10,4">
                                    <Border Width="6" Height="6" CornerRadius="3" Margin="0,0,6,0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF6B9D" Offset="0"/>
                                                <GradientStop Color="#A855F7" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="ACTIVITY LOG" FontSize="10" FontWeight="SemiBold">
                                        <TextBlock.Foreground>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FF6B9D" Offset="0"/>
                                                <GradientStop Color="#A855F7" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </StackPanel>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8">
                                    <TextBlock x:Name="ActivityLog" Text="" Foreground="{StaticResource TextSecondary}" 
                                               FontSize="10" FontFamily="Consolas" TextWrapping="Wrap" Margin="10,0,10,0"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Page Content with Mouse-Reactive Hexagon Background -->
                <Border Grid.Column="1" x:Name="ContentArea" MouseMove="ContentArea_MouseMove" MouseLeave="ContentArea_MouseLeave" Background="Transparent">
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0E0A14" Offset="0"/>
                                <GradientStop Color="#12101A" Offset="0.5"/>
                                <GradientStop Color="#16141C" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        
                        <!-- Animated Vertical Lines Background - Rain Effect -->
                        <Canvas x:Name="LinesCanvas" ClipToBounds="True" IsHitTestVisible="False" Opacity="0.08">
                            <!-- Lines with individual staggered animations for continuous flow -->
                            <Line X1="30" X2="30" Stroke="#FF6B9D" StrokeThickness="1" Y1="-100" Y2="0">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-100" To="700" Duration="0:0:3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="0" To="800" Duration="0:0:3"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="70" X2="70" Stroke="#A855F7" StrokeThickness="1" Y1="-150" Y2="-50">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.5">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-150" To="650" Duration="0:0:4"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-50" To="750" Duration="0:0:4"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="110" X2="110" Stroke="#E879F9" StrokeThickness="1" Y1="-80" Y2="20">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-80" To="720" Duration="0:0:3.5"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="20" To="820" Duration="0:0:3.5"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="150" X2="150" Stroke="#FF6B9D" StrokeThickness="1" Y1="-200" Y2="-100">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.2">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-200" To="600" Duration="0:0:4.5"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-100" To="700" Duration="0:0:4.5"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="190" X2="190" Stroke="#A855F7" StrokeThickness="1" Y1="-120" Y2="-20">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1.5">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-120" To="680" Duration="0:0:3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-20" To="780" Duration="0:0:3"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="230" X2="230" Stroke="#E879F9" StrokeThickness="1" Y1="-60" Y2="40">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.8">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-60" To="740" Duration="0:0:3.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="40" To="840" Duration="0:0:3.2"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="270" X2="270" Stroke="#FF6B9D" StrokeThickness="1" Y1="-180" Y2="-80">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:2">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-180" To="620" Duration="0:0:4"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-80" To="720" Duration="0:0:4"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="310" X2="310" Stroke="#A855F7" StrokeThickness="1" Y1="-90" Y2="10">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-90" To="710" Duration="0:0:3.8"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="10" To="810" Duration="0:0:3.8"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="350" X2="350" Stroke="#E879F9" StrokeThickness="1" Y1="-140" Y2="-40">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1.2">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-140" To="660" Duration="0:0:3.5"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-40" To="760" Duration="0:0:3.5"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="390" X2="390" Stroke="#FF6B9D" StrokeThickness="1" Y1="-50" Y2="50">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1.8">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-50" To="750" Duration="0:0:2.8"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="50" To="850" Duration="0:0:2.8"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="430" X2="430" Stroke="#A855F7" StrokeThickness="1" Y1="-160" Y2="-60">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.6">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-160" To="640" Duration="0:0:4.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-60" To="740" Duration="0:0:4.2"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="470" X2="470" Stroke="#E879F9" StrokeThickness="1" Y1="-100" Y2="0">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:2.2">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-100" To="700" Duration="0:0:3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="0" To="800" Duration="0:0:3"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="510" X2="510" Stroke="#FF6B9D" StrokeThickness="1" Y1="-130" Y2="-30">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.9">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-130" To="670" Duration="0:0:3.6"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-30" To="770" Duration="0:0:3.6"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="550" X2="550" Stroke="#A855F7" StrokeThickness="1" Y1="-70" Y2="30">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1.6">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-70" To="730" Duration="0:0:3.3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="30" To="830" Duration="0:0:3.3"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="590" X2="590" Stroke="#E879F9" StrokeThickness="1" Y1="-190" Y2="-90">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.4">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-190" To="610" Duration="0:0:4.5"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-90" To="710" Duration="0:0:4.5"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="630" X2="630" Stroke="#FF6B9D" StrokeThickness="1" Y1="-110" Y2="-10">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:2.5">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-110" To="690" Duration="0:0:3.4"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-10" To="790" Duration="0:0:3.4"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="670" X2="670" Stroke="#A855F7" StrokeThickness="1" Y1="-150" Y2="-50">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1.1">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-150" To="650" Duration="0:0:4"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-50" To="750" Duration="0:0:4"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="710" X2="710" Stroke="#E879F9" StrokeThickness="1" Y1="-80" Y2="20">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:1.9">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-80" To="720" Duration="0:0:3.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="20" To="820" Duration="0:0:3.1"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                            <Line X1="750" X2="750" Stroke="#FF6B9D" StrokeThickness="1" Y1="-170" Y2="-70">
                                <Line.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.7">
                                    <DoubleAnimation Storyboard.TargetProperty="Y1" From="-170" To="630" Duration="0:0:4.3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Y2" From="-70" To="730" Duration="0:0:4.3"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Line.Triggers>
                            </Line>
                        </Canvas>
                        
                        <!-- Mouse Glow Effect -->
                        <Canvas IsHitTestVisible="False" ClipToBounds="True">
                            <Ellipse x:Name="MouseGlow" Width="200" Height="200" Opacity="0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#20FF6B9D" Offset="0"/>
                                        <GradientStop Color="#08A855F7" Offset="0.6"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Canvas>
                        
                        <!-- Floating Particles -->
                        <Canvas ClipToBounds="True" IsHitTestVisible="False">
                            <Ellipse Width="3" Height="3" Fill="#FF6B9D" Opacity="0.2">
                                <Ellipse.Triggers><EventTrigger RoutedEvent="Loaded"><BeginStoryboard><Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="500" To="-20" Duration="0:0:12"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)" From="80" To="120" Duration="0:0:12"/>
                                </Storyboard></BeginStoryboard></EventTrigger></Ellipse.Triggers>
                            </Ellipse>
